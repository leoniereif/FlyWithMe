<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/flight_number_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:paddingStart="10dp"
            android:text="Flight Number: "
            android:id="@+id/flight_number_title_tv"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="where the flight # goes"
            android:id="@+id/flight_number_tv"
            android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/start_airport_ll"
        android:layout_below="@+id/flight_number_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:paddingStart="10dp"
            android:text="Start Airport: "
            android:id="@+id/start_airport_title_tv"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="where the start airport goes"
            android:id="@+id/start_airport_tv"
            android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/destination_airport_ll"
        android:layout_below="@+id/start_airport_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:paddingStart="10dp"
            android:text="Destination Airport: "
            android:id="@+id/destination_airport_title_tv"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="the destination airport"
            android:id="@+id/destination_airport_tv"
            android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/departure_time_ll"
        android:layout_below="@+id/destination_airport_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:paddingStart="10dp"
            android:text="Departure Time: "
            android:id="@+id/departure_time_title_tv"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="the departure time"
            android:id="@+id/departure_time_tv"
            android:textSize="16sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/arrival_time_ll"
        android:layout_below="@+id/departure_time_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:paddingStart="10dp"
            android:text="Arrival Time: "
            android:id="@+id/arrival_time_title_tv"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="the arrival time"
            android:id="@+id/arrival_time_tv"
            android:textSize="16sp"/>

    </LinearLayout>

</RelativeLayout>