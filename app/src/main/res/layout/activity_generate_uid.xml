<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deltaBlue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/my_uid_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="31dp"
            android:fontFamily="monospace"
            android:text="my FlyAlly ID:"
            android:textColor="@color/deltaLightBlue"
            android:textSize="32dp"
            android:textStyle="bold"
            android:paddingTop="130dp"/>

        <TextView
            android:id="@+id/uid_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/deltaBlue"
            android:fontFamily="monospace"
            android:padding="20dp"
            android:text="UID"
            android:textAlignment="center"
            android:textColor="@color/cloudColor"
            android:textSize="40dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="monospace"
            android:padding="20dp"
            android:text="share with your allies."
            android:textColor="@color/cloudColor"
            android:textSize="20dp"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/ready_to_fly_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/deltaLightBlue"
            android:fontFamily="monospace"
            android:onClick="readyToFlyOnClick"
            android:text=" ready to fly "
            android:textAllCaps="false"
            android:textColor="@color/deltaBlue"
            android:textSize="18dp"
            android:textStyle="bold" />


    </LinearLayout>
</RelativeLayout>