<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fly_with_me_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="50dp"
            android:paddingBottom="5dp"
            android:textAlignment="center"
            android:fontFamily="monospace"
            android:textSize="30dp"
            android:text="fly with me"/>

        <ImageView
            android:id="@+id/main_screen_cloud_iv"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_alignParentStart="true"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            app:srcCompat="@drawable/cloudicon"
            />

        <Button
            android:id="@+id/im_flying_button"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="i'm flying"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/im_along_button"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="i'm along for the ride"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textStyle="bold" />


    </LinearLayout>


</RelativeLayout>