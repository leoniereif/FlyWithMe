<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/deltaLightBlue"
        android:orientation="vertical">

        <TextView
            android:id="@+id/fly_with_me_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/deltaLightBlue"
            android:fontFamily="monospace"
            android:paddingBottom="5dp"
            android:paddingTop="50dp"
            android:text="fly with me"
            android:textAlignment="center"
            android:textColor="@color/deltaBlue"
            android:textStyle="bold"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/main_screen_cloud_iv"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_alignParentStart="true"
            android:adjustViewBounds="true"
            android:background="@color/deltaLightBlue"
            android:cropToPadding="true"
            app:srcCompat="@drawable/cloudicon" />

        <Button
            android:id="@+id/im_flying_button"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/deltaBlue"
            android:fontFamily="monospace"
            android:onClick="imFlyingOnClick"
            android:text="i'm flying"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/cloudColor"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginTop="30dp"

            />

        <Button
            android:id="@+id/im_along_button"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/deltaBlue"
            android:fontFamily="monospace"
            android:onClick="imAlongOnClick"
            android:text="i'm along for the ride"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/cloudColor"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginTop="15dp"/>


    </LinearLayout>


</RelativeLayout>