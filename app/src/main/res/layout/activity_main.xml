<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/prompt_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter your Flight Number:"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/flight_number_et"
        android:layout_below="@+id/prompt_tv"

        />

    <Button
        android:id="@+id/flight_info_bttn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/flight_number_et"
        android:layout_centerHorizontal="true"
        android:onClick="flightInfoActivityOnClick"
        android:text="See Flight Info" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test"
        android:onClick="startMainScreen"/>

</RelativeLayout>
