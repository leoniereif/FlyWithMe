<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/deltaBlue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <TextView
                android:id="@+id/flight_number_prompt_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="monospace"
                android:paddingTop="10dp"
                android:text="my flight #:"
                android:textColor="@color/deltaLightBlue"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginTop="130dp"
                android:padding="30sp"
                />

            <EditText
                android:id="@+id/flight_number_et"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:fontFamily="monospace"
                android:shadowColor="@color/deltaRed"
                android:textAlignment="center"
                android:textColor="@color/deltaLightBlue"
                android:textColorHighlight="@color/deltaRed"
                android:textColorLink="@color/deltaLightBlue"
                android:textCursorDrawable="@color/deltaLightBlue"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/flight_info_bttn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:background="@color/deltaLightBlue"
                android:fontFamily="monospace"
                android:onClick="enterFlightNumberActivityOnClick"
                android:text="let's go!"
                android:textAllCaps="false"
                android:textColor="@color/deltaBlue"
                android:textSize="20sp"
                android:textStyle="bold" />

    </LinearLayout>


</RelativeLayout>
